<Window x:Class="Emelina_KS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Emelina_KS"
        mc:Ignorable="d"
        Title="Авторизация" Height="206" Width="268.8" KeyDown="Window_KeyDown"
        >
    <Grid x:Name="g">
        <ComboBox x:Name="groups" HorizontalAlignment="Left" Margin="113,22,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="groups_SelectionChanged" Height="26"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Margin="113,69,0,0" VerticalAlignment="Top" Width="120" Height="26"/>
        <Button x:Name="enter" Content="Вход" HorizontalAlignment="Left" Margin="113,127,0,0" VerticalAlignment="Top" Width="120" Click="enter_Click" Height="26" IsEnabled="False"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="24,22,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="24,69,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
